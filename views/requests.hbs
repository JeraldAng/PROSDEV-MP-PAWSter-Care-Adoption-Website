<body>
  {{> navbar}}<br><br><br><br>
    <h1 class="text-center">Here are your requests!</h1><br>

    
<div class="container">
	<table id="cart" class="table table-condensed">
    				<thead>
						<tr class="request-header">
							<th style="width:25%" class="text-center">Name of Dog</th>
							<th style="width:25%" class="text-center">Name of Requester</th>
							<th style="width:25%" class="text-center">Request Status</th>
						</tr>
					</thead>
					<tbody>
                        {{#each reqList}}
						<tr class="{{reqStatus}} text-center">
							<td data-th="Product">
								<div class="row">
                                    <div class="col-sm-1 hidden-xs">
                                        <a class="lightbox" href="#image">
                                        <img src="../uploads/{{reqDogPic}}" alt="..." class="img-responsive reqicon"/></a></div>
									<div class="col-sm-10">
										<h4 class="nomargin">{{reqDog}}</h4>
									</div>
								</div>
							</td>
							<td data-th="reqName">{{reqName}}</td>
							<td class="reqStatus" data-th="">{{reqStatus}}</td>
						</tr>
                        {{/each}}
					</tbody>
					
				</table>
</div><br><br>
    
  {{> footer}}